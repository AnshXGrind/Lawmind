{
  "name": "LawMind Backend",
  "description": "AI-Powered Legal Drafting Assistant API",
  "keywords": ["fastapi", "python", "ai", "legal", "openai"],
  "stack": "container",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "OPENAI_API_KEY": {
      "description": "Your OpenAI API key for AI features",
      "required": true
    },
    "SECRET_KEY": {
      "description": "Secret key for JWT token generation",
      "generator": "secret"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL",
      "required": true
    },
    "CORS_ORIGINS": {
      "description": "Allowed CORS origins (JSON array)",
      "value": "[\"https://lawmind.netlify.app\"]"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ]
}
